<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/label</item>
        <item name="android:textColor">@color/red_600</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ducktales</item>
        <item name="android:textColor">@color/red_500</item>
        <item name="android:shadowColor">@color/red_300</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:layout_marginBottom">@dimen/spacer</item>
    </style>

    <style name="long_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>